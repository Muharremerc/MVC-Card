    <script>

        function Login() {

            var data = {
                username: $("#username").val(),
                password: $("#password").val()

            };


            $.ajax({
                url: "/Login/LoginCheck/",
                dataType: "json",
                type: "POST",
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (data) {
                    if (data != 0) {
                        window.location.assign("/Product/Index")

                    }
                }
            })


        }

    </script>