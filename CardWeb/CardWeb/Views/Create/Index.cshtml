<script>

    function CreateCustomer() {

        var data = {

            card: $("#card").val(),
            name: $("#name").val(),
            surname: $("#surname").val(),
            username: $("#username").val(),
            password: $("#password").val(),
            email: $("#email").val(),
            phone: $("#phone").val()

        };


        $.ajax({
            url: "/Create/AddCustomer/",
            dataType: "JSON",
            type: "POST",
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function (data) {
                if (data != null) {
                    window.location.assign("../Home/Index")

                }
            }
        })


    }

</script>
